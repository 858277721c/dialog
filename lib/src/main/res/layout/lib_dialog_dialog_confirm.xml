<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/libDialog.Text.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/dialog_custom_ll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            style="@style/libDialog.Text.Cancel"
            android:layout_height="@dimen/height_dialog_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_dialog_button"/>

        <TextView
            android:id="@+id/dialog_custom_tv_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_dialog_item"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_dialog_button"/>
    </LinearLayout>

</LinearLayout>