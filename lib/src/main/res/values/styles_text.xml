<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- style text title -->
    <style name="libDialog.Text.Title.Base">
    </style>

    <style name="libDialog.Text.Title" parent="libDialog.Text.Title.Base">
        <item name="android:text">@string/lib_dialog_text_title</item>
        <item name="android:textColor">@color/lib_dialog_text_title</item>
        <item name="android:textSize">@dimen/lib_dialog_text_title</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- style text content -->
    <style name="libDialog.Text.Content.Base">
    </style>

    <style name="libDialog.Text.Content" parent="libDialog.Text.Content.Base">
        <item name="android:textColor">@color/lib_dialog_text_content</item>
        <item name="android:textSize">@dimen/lib_dialog_text_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- style text cancel -->
    <style name="libDialog.Text.Cancel.Base">
    </style>

    <style name="libDialog.Text.Cancel" parent="libDialog.Text.Cancel.Base">
        <item name="android:text">@string/lib_dialog_text_cancel</item>
        <item name="android:textColor">@color/lib_dialog_text_cancel</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/lib_dialog_text_cancel</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- style text confirm -->
    <style name="libDialog.Text.Confirm.Base">
    </style>

    <style name="libDialog.Text.Confirm" parent="libDialog.Text.Confirm.Base">
        <item name="android:textColor">@color/lib_dialog_text_confirm</item>
        <item name="android:text">@string/lib_dialog_text_confirm</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/lib_dialog_text_confirm</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- style text button -->
    <style name="libDialog.Text.Button.Base">
    </style>

    <style name="libDialog.Text.Button" parent="libDialog.Text.Button.Base">
        <item name="android:textColor">@color/lib_dialog_text_button</item>
        <item name="android:textSize">@dimen/lib_dialog_text_button</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>