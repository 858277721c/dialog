<resources>

    <style name="libDialog.Dialog.Base" parent="@android:style/Theme.DeviceDefault.Dialog">
    </style>

    <style name="libDialog.Dialog" parent="libDialog.Dialog.Base">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="libDialog.Dialog.Dim" parent="libDialog.Dialog">
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="libDialog.Anim.SlidingBottomBottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation"> @anim/lib_dialog_dialog_enter_sliding_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/lib_dialog_dialog_exit_sliding_to_bottom </item>
    </style>

    <style name="libDialog.Anim.SlidingTopTop" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/lib_dialog_dialog_enter_sliding_from_top</item>
        <item name="@android:windowExitAnimation">@anim/lib_dialog_dialog_exit_sliding_to_top</item>
    </style>


</resources>